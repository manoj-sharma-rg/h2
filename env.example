# RGBridge PMS Integration Platform - Environment Configuration

# Application settings
APP_NAME=RGBridge PMS Integration Platform
VERSION=1.0.0
DEBUG=false

# Server settings
HOST=0.0.0.0
PORT=8000

# CORS settings (comma-separated)
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Authentication settings
API_KEY_HEADER=X-API-Key
API_KEYS=["your-api-key-1","your-api-key-2"]

# Internal API settings
INTERNAL_API_URL=http://localhost:8080
INTERNAL_API_TIMEOUT=30
INTERNAL_API_RETRY_ATTEMPTS=3
INTERNAL_API_RETRY_DELAY=1

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# File paths
MAPPING_DIR=mappings
SCHEMA_DIR=schemas

# Database settings (for future use)
DATABASE_URL=sqlite:///./rgbridge.db

# OpenAI API key for AI-powered mapping suggestions
OPENAI_API_KEY= 